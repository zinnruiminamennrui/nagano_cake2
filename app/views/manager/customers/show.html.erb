<div class="container mx-5 px-sm-0">
  <div class="mt-4">
    <h4><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h4>
    <table class="table table-borderless">
      <tbody>
      <tr>
        <th style="width:25%">会員ID</th>
        <td style="width:75%"><%= @customer.id %></td>
      </tr>
      <tr>
        <th>氏名</th>
        <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
      </tr>
      <tr>
        <th>フリガナ</th>
        <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @customer.phone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
        <th>会員ステータス</th>
        <td>
      <% if @customer.is_deleted == true %>
        <p class="text-secondary">退会</p>
      <% elsif @customer.is_deleted == false %>
        <p class="text-success">有効</p>
      <% end %>
        </td>
      </tr>
      </tbody>
    </table>
    <div class="text-center">
      <%= link_to "編集する", edit_manager_customer_path(@customer.id), class: 'btn btn-success mr-5' %>
      <%= link_to "注文一覧を見る", orders_path(@customer.id), class: 'btn btn-primary' %>
    </div>
  </div>
</div>