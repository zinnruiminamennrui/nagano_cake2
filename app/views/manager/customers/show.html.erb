<table class="table table-borderless">
<div class="container mx-5 px-sm-0">
  <div class="mt-4">
    <h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h2>
    <tbody>
  　<tr>
  　  <th>会員ID</th>
  　  <th><%= @customer.id %></th>
  　</tr>
    <tr>
  	  <th>氏名</th>
  	  <th><%= @customer.last_name %>　<%= @customer.first_name %></th>
    </tr>
    <tr>
  	  <th>フリガナ</th>
  	  <th><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></th>
    </tr>
    <tr>
      <th>郵便番号</th>
      <th><%= @customer.postal_code %></th>
    </tr>
    <tr>
      <th>住所</th>
      <th><%= @customer.address %></th>
    </tr>
    <tr>
      <th>電話番号</th>
      <th><%= @customer.phone_number %></th>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <th><%= @customer.email %></th>
    </tr>
    <tr>
      <th>会員ステータス</th>
      <th>
        <% if @customer.is_deleted == true %>
          <p class="text-secondary">退会</p>
        <% elsif @customer.is_deleted == false %>
          <p class="text-success">有効</p>
        <% end %>
      </th>
    </tr>
  </tbody>
</table>

<%= link_to "編集する", edit_manager_customer_path(@customer.id), class: 'btn btn-default' %>
  
<%= link_to "注文一覧を見る", orders_path, class: 'btn btn-default' %>
  