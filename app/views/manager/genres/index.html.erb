<div class="container-fruid">
  <div class="row">
    <div class="col-md-12" style="height: 50px;"></div>
  </div>
  <div class="row mb-5">
    <div class="col-md-2"></div>
    <div class="col-md-10"><h4>ジャンル一覧・追加</h4></div>
  </div>
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-6">
      <%= form_with model:@genre,url:manager_genres_path, local:true do |f| %>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td width="30%">　ジャンル名</td>
            <td width="40%"><%= f.text_field :name,placeholder:"ジャンル名" %></td>
            <td width="30%"><%= f.submit '新規登録', class: 'btn btn-success' %></td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
    <div class="col-md-5"></div>
  </div>
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-3">
      <table class="table">
        <thead class="thead-light">
          <th>　　　　ジャンル</th>
          <th></th>
        </thead>
        <% @genres.each do |genre| %>
        <tbody>
          <tr>
            <td width="60%"><%= genre.name %></td>
            <td width="40%"><%= link_to "編集する", edit_manager_genre_path(genre.id), class: 'btn btn-success' %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
    <div class="col-md-7"></div>
  </div>
</div>