<div class= 'container'>
  <div class= 'row'>
    <div class='col-md-8'>
      <h3>ジャンル一覧・追加</h3>
      <div class="form-group">
        <%= form_with model:@genre,url:manager_genres_path, local:true do |f| %>
        <table>
          <tr>
            <td>ジャンル名</td>
            <td><%= f.text_field :name %></td>
            <td><%= f.submit '新規登録', class: 'btn btn-success' %></td>
          </tr>
        </table>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class='col-md-6'>
      <h3>ジャンル</h3>
      <% @genres.each do |genre| %>
      <table>
        <tr>
          <td><%= genre.name %></td>
          <td><!--%= link_to "編集する", edit_manager_genre_path %--></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>