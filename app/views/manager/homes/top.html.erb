<div class="container">
  <div class="row mt-5">
    <div class="col-md-2"></div>
    <div class="col-md-10">注文履歴一覧</div>
  </div>
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-10">
      <table class="table">
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
        <% @orders.each do |order| %>
        <tr>
          <td><%= link_to order.created_at.to_s(:datetime_mg),manager_order_path(order) %>
          </td>
          <td><%= order.customer.name %></td>
          <td><></td>
          <td><%= order.status_i18n %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>