<div class="container">
    <div class="row">
    <h2>商品編集</h2>
    <div class="col-md-8">
      <%= form_with model:@product,url:manager_product_path, method: :patch,local:true do |f| %>
      <div class="col-xs-6">
        <div class="form-group">
          <%= f.label :"商品画像" %>
          <%= f.attachment_field :image %>
        </div>
        <div class="form-group">
          <%= f.label :"商品名",class: "col-sm-3 control-label" %>
          <%= f.text_field :name, :placeholder => "商品名", class: "col-sm-9 form-control-static name" %>
        </div>
        <div class="form-group">
          <%= f.label :"商品説明" %>
          <%= f.text_area :introduction, :placeholder => "ここに説明を記述します" %>
        </div>
        <div class="form-group">
            <%= f.label :genre_id, "ジャンル" %>
            <%= f.select(:genre_id, Genre.all.map {|genre|[genre.name, genre.id] }, {prompt: "--  選択してください --"}) %>
          </div>
         <div class="form-group">
          <%= f.label :"税抜価格" %>
          <%= f.text_field :price, :placeholder => "1000" %><span>円</span>
        </div>
        <div class="form-group">
          <%= f.label :"販売ステータス" %>
            <%= f.radio_button :is_active, true %>
            <%= f.label :is_active, '販売中', value: true %>
            <%= f.radio_button :is_active, false %>
            <%= f.label :is_active, '販売停止中', value: false %>
        </div>
      </div>
      <div class="actions">
        <%= f.submit "変更を保存", class: "btn btn-success"%>
      </div>
    <% end %>
    </div>
  </div>
</div>
