<div class="container px-5 py-5">
  <div class="row mb-3">
    <div class="col-md-1"></div>
    <div class="col-md-10"><h4>商品一覧</h4></div>
    <div class="col-md-1"></div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-11 mx-auto">
      <table class="table table-hover">
        <thead class="thead-light">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
  			<% @products.each do |product| %>
    		<tr>
           <td>
             <%= product.id %>
           </td>
           <td>
            <%= link_to manager_product_path(product), class:"text-dark" do %>
              <%= product.name %>
            <% end %>
            </td>
            <td>
              <%= product.price.to_s(:delimited) %>
            </td>
            <td>
              <%= product.genre.name %>
            </td>
            <td>
              <% if product.is_active == true %>
               <p class="text-success">販売中</p>
              <% elsif product.is_active == false %>
               <p class="text-secondary">販売停止中</p>
              <% end %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
      <div class="mb-5"><%= paginate(@products) %></div>
    </div>
  </div>
</div>