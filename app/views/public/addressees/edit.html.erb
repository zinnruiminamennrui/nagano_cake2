<div class= 'container'>
  <div class= 'row'>
    <div class='col-md-8'>
      <h3>配送先編集</h3>
      <div class="form-group">
        <%= form_with model:@addressee, url:addressee_path, local:true do |f| %>
        <table>
          <tr>
            <td>郵便番号(ハイフンなし)</td>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= f.text_field :address%></td>
          </tr>
          <tr>
            <td>宛名</td>
            <td><%= f.text_field :name%></td>
            <td><%= f.submit '変更内容を保存', class: 'btn btn-success' %></td>
          </tr>
        </table>
        <% end %>
      </div>
    </div>
  </div>
</div>