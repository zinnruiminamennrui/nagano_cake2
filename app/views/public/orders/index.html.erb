<div class="container px-5 py-5">
  <div class="row mb-3">
    <div class="col-md-1"></div>
    <div class="col-md-10"><h5>注文履歴一覧</h5></div>
    <div class="col-md-1"></div>
  </div>
  <div class="row">
    <div class="col">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
           <% @orders.each do |order|%>
          <tr>
            <td><%= order.created_at.to_s(:datetime_jp) %></td>
            <td>
              〒<%= order.postal_code%><br>
              <%= order.address%><br>
              <%= order.name%>
            </td>
            <td>
            <% order.order_products.each do |order_product| %>
            <%= order_product.product.name %><br>
            <% end %>
            </td>
            <td><%= order.total_payment %></td>
            <td><></td>

            <td>
              <%= link_to '表示する', order_path(order.id), class:"btn btn-primary btn-sm"%>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>