<div class="container px-5 py-5">
  <div class="row mb-3">
    <div class="col-md-1"></div>
    <div class="col-md-10 d-flex flex-row "><h3>商品一覧<span>(全<%= @products.count %>件)</span></h3></div>
    <div class="col-md-1"></div>
  </div>
</div>
<div class="container">
  <div class="row">
  <% @products.each do |product| %>
   <div class="card-group">
    <div class="card card border-light mb-3 ml-1 mr-1">
    <div class="card-img-top"><%= link_to product_path(product.id) do %>
     <%= attachment_image_tag(product, :image, size: "200x150", fallback: "no_image") %>
    <% end %>
    </div>
    <div class="card-body">
     <h5 class="card-title"><%= product.name %></h5>
     <p class="card-text">¥<%= product.price.to_s(:delimited) %></p>
    </div>
    </div>
   </div>
  <% end %>
  </div>
</div>
