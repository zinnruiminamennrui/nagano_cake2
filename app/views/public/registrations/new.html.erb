<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2 my-5">
      <h3>新規会員登録</h3>
    </div>
  </div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render "public/shared/error_messages", resource: resource %>
  <div class="row">
    <div class="col-md-12">
    <form class="form-inline">
     <div class="form-group">
      氏名
      <%= f.label :性 %>
      <%= f.text_field :last_name, autofocus: true %>
      <%= f.label :名 %>
      <%= f.text_field :first_name, autofocus: true %>
     </div>
     <div class="form-group">
       フリガナ
       <%= f.label :セイ %>
       <%= f.text_field :last_name_kana, autofocus: true %>
       <%= f.label :メイ %>
       <%= f.text_field :first_name_kana, autofocus: true %>
    　</div>
     <div class="form-group">
       メールアドレス
       <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
     </div>
     <div class="form-group">
       <%= f.label :郵便番号 %>
       <%= f.text_field :postal_code, autofocus: true %>
     </div>
     <div class="form-group">
       住所
       <%= f.text_field :address, autofocus: true %>
     </div>
     <div class="form-group">
       電話番号
       <%= f.text_field :phone_number, autofocus: true %>
     </div>
     <div class="form-group">
       パスワード
       <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
       <% end %>
       <%= f.password_field :password, autocomplete: "new-password" %>
     </div>
     <div class="form-group">
       パスワード確認用
       <%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
     <div class="form-group">
       <%= f.submit "Sign up" %>
     </div>
    </form>
    </div>
  </div>
<% end %>
<div class="row">
  <div class="col-md-12">
    すでに会員登録済みの方</br>
    <%= render "public/shared/links" %>　からログインしてください
  </div>
</div>
</div>
