<p id="notice"></p>
<div class="container-fluid">
  <div class="row">
    <div class="col-lg-1 pl-0 pr-5"></div>
    <div class="col-lg-2 px-5 my-5">
     <h3>新規会員登録</h3>
    </div>
  </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="row">
    <div class="col-lg-1 px-0"></div>
  <div class="col-lg-4 px-0">
    氏名
  </div>

  <div class="col-lg-2">
    <%= f.label :性 %>
    <%= f.text_field :last_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :名 %>
    <%= f.text_field :first_name, autofocus: true %>
  </div>
  </div>

  <div class="row">
    <div>フリガナ</div>
    <div class="field">
    <%= f.label :セイ %>
    <%= f.text_field :last_name_kana, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :メイ %>
    <%= f.text_field :first_name_kana, autofocus: true %>
  </div>
  </div>

  <div class="row">
    <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  </div>

  <div class="row">
    <div class="field">
    <%= f.label :郵便番号 %>
    <%= f.text_field :postal_code, autofocus: true %>
  </div>
  </div>

  <div class="row">
    <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address, autofocus: true %>
  </div>
  </div>

  <div class="row">
    <div class="field">
    <%= f.label :電話番号 %>
    <%= f.text_field :phone_number, autofocus: true %>
  </div>
  </div>

  <div class="row">
    <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
  </div>

  <div class="row">
    <div class="field">
    <%= f.label :パスワード（確認用） %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  </div>

  <div class="row">
    <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
  </div>

<% end %>

<div class="row"></div>

<div class="row">すでに会員登録済みの方</div>

<div class="row"><%= render "public/shared/links" %>からログインしてください</div>


</div>